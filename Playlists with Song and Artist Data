-- create a table of song titles and artists 
CREATE TABLE songs (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    artist TEXT,
    title TEXT);

-- insert songs info into song table 
INSERT INTO songs (artist, title)
    VALUES ("Taylor Swift", "Shake it off");
